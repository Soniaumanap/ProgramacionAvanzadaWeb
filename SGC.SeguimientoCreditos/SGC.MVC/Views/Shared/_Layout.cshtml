@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var usuarioNombre = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioNombre");
    var usuarioRol = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioRol");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - SGC Seguimiento Créditos</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">

            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                SGC Créditos
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    @* Clientes: todos los roles logueados *@
                    @if (!string.IsNullOrEmpty(usuarioRol))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Clientes" asp-action="Index">Clientes</a>
                        </li>

                        @* Solicitudes: ServicioCliente y Admin *@
                        @if (usuarioRol == "ServicioCliente" || usuarioRol == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Solicitudes" asp-action="Index">Solicitudes</a>
                            </li>
                        }

                        @* Gestiones: Analista, Gestor, Admin *@
                        @if (usuarioRol == "Analista" || usuarioRol == "Gestor" || usuarioRol == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Gestiones" asp-action="Index">Gestiones</a>
                            </li>
                        }

                        @* Reporte de Tracking: cualquier usuario logueado *@
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reporte" asp-action="Index">Reporte Tracking</a>
                        </li>

                        @* Administración de usuarios: solo Admin *@
                        @if (usuarioRol == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                            </li>
                        }
                    }
                </ul>

                <ul class="navbar-nav ms-auto">

                    @if (string.IsNullOrEmpty(usuarioNombre))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Login">Iniciar sesión</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="navbar-text me-3">
                                @usuarioNombre (@usuarioRol)
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Logout">Salir</a>
                        </li>
                    }

                </ul>

            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

</body>
</html>
