@model List<SGC.BLL.Dtos.SolicitudDto>

@{
    ViewData["Title"] = "Seguimiento de Gestiones de Crédito";
    var rol = ViewBag.Rol as string ?? "";
}

<link href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container mt-4">
    <h2>Seguimiento de Gestiones de Crédito</h2>

    <table id="tablaGestiones" class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Gestión</th>
                <th>Identificación Cliente</th>
                <th>Monto</th>
                <th>Estado</th>
                <th>Fecha</th>
                <th>Comentarios</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Id</td>
                    <td>@s.IdentificacionCliente</td>
                    <td>@s.Monto.ToString("N2")</td>
                    <td>@s.Estado</td>
                    <td>@s.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@s.Comentarios</td>
                    <td>
                        <button class="btn btn-sm btn-info" onclick="verTracking(@s.Id)">Tracking</button>

                        @* Analista / Admin: Enviar a aprobación si está Ingresado o Devolucion *@
                        @if (rol == "Analista" || rol == "Admin")
                        {
                            if (s.Estado == "Ingresado" || s.Estado == "Devolucion" || s.Estado == "Devolución")
                            {
                                <button class="btn btn-sm btn-primary ms-1" onclick="enviarAprobacion(@s.Id)">Enviar aprobación</button>
                            }
                        }

                        @* Gestor / Admin: Aprobar o Devolver si está Enviado aprobación *@
                        @if (rol == "Gestor" || rol == "Admin")
                        {
                            if (s.Estado == "Enviado aprobacion" || s.Estado == "Enviado aprobación")
                            {
                                <button class="btn btn-sm btn-success ms-1" onclick="aprobar(@s.Id)">Aprobar</button>
                                <button class="btn btn-sm btn-warning ms-1" onclick="devolver(@s.Id)">Devolver</button>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/gestiones.js"></script>

<script>
    $(document).ready(function () {
        $('#tablaGestiones').DataTable();
    });
</script>
