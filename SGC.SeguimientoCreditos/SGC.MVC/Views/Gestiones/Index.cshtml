@model List<SGC.BLL.Dtos.SolicitudDto>

@{
    ViewData["Title"] = "Seguimiento de Gestiones de Crédito";
}

<link href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    /* --- ESTILO DE TABLA FULL WIDTH PROFESIONAL --- */

    .page-container {
        width: 100%;
        padding: 10px 25px;
    }

    .titulo {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 20px;
    }

    table.dataTable thead th {
        white-space: nowrap;
        font-weight: 600;
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
    }

    table.dataTable td {
        vertical-align: middle;
    }

    /* Comentarios truncados */
    .col-comentario {
        max-width: 400px;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
    }

    /* Ampliar espacio entre botones */
    .acciones .btn {
        margin-right: 6px;
        margin-bottom: 4px;
    }

    /* Botones */
    .btn-tracking {
        background-color: #0dcaf0;
        color: white;
    }

    .btn-enviar {
        background-color: #0d6efd;
        color: white;
    }

    .btn-aprobar {
        background-color: #198754;
        color: white;
    }

    .btn-devolver {
        background-color: #ffc107;
        color: black;
    }

    .btn-eliminar {
        background-color: #dc3545;
        color: white;
    }

</style>

<div class="page-container">

    <h2 class="titulo">Seguimiento de Gestiones de Crédito</h2>

    <table id="tablaGestiones" class="table table-striped table-bordered w-100">
        <thead>
            <tr>
                <th>Gestión</th>
                <th>Identificación</th>
                <th>Monto</th>
                <th>Estado</th>
                <th>Fecha</th>
                <th>Comentarios</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Id</td>
                    <td>@s.IdentificacionCliente</td>
                    <td>@s.Monto.ToString("N2")</td>
                    <td>
                        @switch (s.Estado)
                        {
                            case "Ingresado":
                                <span class="badge bg-secondary">@s.Estado</span>
                                break;
                            case "Enviado aprobación":
                                <span class="badge bg-info text-dark">@s.Estado</span>
                                break;
                            case "Devolución":
                                <span class="badge bg-warning text-dark">@s.Estado</span>
                                break;
                            case "Aprobado":
                                <span class="badge bg-success">@s.Estado</span>
                                break;
                            default:
                                <span class="badge bg-light text-dark">@s.Estado</span>
                                break;
                        }
                    </td>

                    <td>@s.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="col-comentario">@s.Comentarios</td>

                    <td class="acciones">
                        <a class="btn btn-sm btn-tracking"
                           href="@Url.Action("Index", "Reporte", new { id = s.Id })">
                            Tracking
                        </a>


                        @if (s.Estado == "Ingresado" || s.Estado == "Devolución")
                        {
                            <button class="btn btn-sm btn-enviar" onclick="enviarAprobacion(@s.Id)">Enviar Aprobación</button>
                            <button class="btn btn-sm btn-eliminar" onclick="eliminarGestion(@s.Id)">Eliminar</button>
                        }

                        @if (s.Estado == "Enviado aprobación")
                        {
                            <button class="btn btn-sm btn-aprobar" onclick="aprobar(@s.Id)">Aprobar</button>
                            <button class="btn btn-sm btn-devolver" onclick="devolver(@s.Id)">Devolver</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<script>
    $(document).ready(function () {

        $('#tablaGestiones').DataTable({
            pageLength: 15,
            autoWidth: false,
            scrollX: true,          
            order: [[0, 'desc']],
            language: {
                lengthMenu: "Mostrar _MENU_ gestiones",
                search: "Buscar:",
                zeroRecords: "No se encontraron gestiones",
                info: "Mostrando _START_ a _END_ de _TOTAL_",
                paginate: {
                    previous: "Anterior",
                    next: "Siguiente"
                }
            }
        });
    });
</script>

<script src="~/js/gestiones.js"></script>
