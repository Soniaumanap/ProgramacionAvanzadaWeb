@model List<SGC.BLL.Dtos.TrackingDto>

@{
    ViewData["Title"] = "Reporte de Tracking";
    var gestionId = ViewBag.GestionId as int?;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">

    <h2>Reporte de Tracking</h2>

    @if (gestionId.HasValue)
    {
        <p class="text-muted">
            Mostrando movimientos para la gestión <strong>@gestionId.Value</strong>.
        </p>
    }
    else
    {
        <p class="text-muted">
            No se ha indicado una gestión específica.
        </p>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive mt-3">
            <table class="table table-striped table-bordered table-sm">
                <thead class="table-light">
                    <tr>
                        <th>Fecha</th>
                        <th>Acción</th>
                        <th>Comentario</th>
                        <th>Usuario</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@t.Accion</td>
                            <td>@t.Comentario</td>
                            <td>@t.UsuarioNombre</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (gestionId.HasValue)
    {
        <div class="alert alert-info mt-3">
            No hay movimientos registrados para esta gestión.
        </div>
    }
</div>
