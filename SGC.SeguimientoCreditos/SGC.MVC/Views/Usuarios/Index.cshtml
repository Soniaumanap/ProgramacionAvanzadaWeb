@model List<SGC.BLL.Dtos.UsuarioDto>

@{
    ViewData["Title"] = "Administración de Usuarios";
}

<link href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container mt-4">

    <h2 class="mb-4">Administración de Usuarios</h2>

    <button class="btn btn-primary mb-3" onclick="abrirModalCrear()">Crear Usuario</button>

    <table id="tablaUsuarios" class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Identificación</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.Identificacion</td>
                    <td>@u.Nombre</td>
                    <td>@u.Email</td>
                    <td>@u.Rol</td>
                    <td>@(u.Activo ? "Sí" : "No")</td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="editar(@u.Id)">Editar</button>
                        <button class="btn btn-sm btn-danger" onclick="eliminar(@u.Id)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modales -->
<div id="modalCreateContainer">
    @Html.Partial("_CreateModal")
</div>

<div id="modalEditContainer">
    @Html.Partial("_EditModal")
</div>

<script src="~/js/usuarios.js"></script>

<script>
    $(document).ready(function () {
        $('#tablaUsuarios').DataTable();
    });
</script>
