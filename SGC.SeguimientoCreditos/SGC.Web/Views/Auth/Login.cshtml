@model SGC.BLL.Dtos.LoginDto
<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <h4>SGC – Ingreso</h4>

        @if (TempData["Registered"] != null)
        {
            <div class="alert alert-success">@TempData["Registered"]</div>
        }

        <form method="post">
            <div class="mb-2"><label>Email</label><input asp-for="Email" class="form-control" /></div>
            <div class="mb-2"><label>Password</label><input asp-for="Password" type="password" class="form-control" /></div>
            <button class="btn btn-primary w-100">Entrar</button>
            @if (ViewBag.Error != null)
            {
                <div class="text-danger mt-2">@ViewBag.Error</div>
            }
        </form>

        <div class="mt-3 text-center">
            ¿No tienes cuenta? <a asp-action="Register">Regístrate aquí</a>
        </div>
    </div>
</div>
